<main>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img src="/app/assets/images/no_image.jpg">
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit_user_88852" href="/users/88852/edit">
          <i class="fas fa-users-cog"></i>
        </a>
      </div>
      <form action="/books" accept-charset="UTF-8" method="post">
        <h2 class="mt-3">New book</h2>
        <% if @book.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @book.errors.count %>件のエラーが発生しました
            </h6>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @book do |f| %>
        <div class="new_post">
          
          
          
          
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="title">
        </div>
        <div class="new_post">
          
          
          
          
          
          <label for="book_opinion">Opinion</label>
          <textarea class="form-control book_body" name="book[body]" id="body"></textarea>
        </div>
        <p></p>
        <div class="new_post">
          
          
          
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        <% end %>
        </div>
      </form>
      </div>
  </div>
</div>
</main>
      
      

<mian>
