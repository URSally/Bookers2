  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
            <th>Title</th>
            <span><%= book.title %></span>
            <th>Opinion</th>
         </tr>
    </thead>
    </table>
  </div>
<% end %>
