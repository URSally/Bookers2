<%= render 'userinfo', books: @books %>

<mian>

  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
            <% @books.each do |book| %>
            <th>Title</th>
            <%= book.title %>
            <th>Opinion</th>
            <%= book.body %>
            <% end %>
            <% if @book.user == current_user %>
               <%= link_to "削除", book_path(@book), method: :delete %>
            <% end %>
         </tr>
    </thead>
    </table>
  </div>

</mian>