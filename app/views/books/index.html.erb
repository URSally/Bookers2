<%= render 'userinfo', books: @books %>
<mian>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
            <% @books.each do |book| %>
            <th>Title</th>
            <%= link_to book.title, "/books/#{book.id}" %>
            
            <th>Opinion</th>
            <%= book.body %>
            <% end %>
         </tr>
    </thead>
    </table>
  </div>
</mian>